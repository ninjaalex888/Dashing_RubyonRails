<h2>Dashboard <%= @dashboard.release %></h2>

   <h3>Widgets:</h3>
   <% if @dashboard.widgets.blank? %>

      <p>Currently, they are no widgets on this dashboard.</p>

   <% else %>

      <ul id = "widgets">
         <% @dashboard.widgets.each do |c| %>
            <li>
            <%= link_to c.title, {:controller => 'widget', :action => 'show', :id => c.id} %>
            <b> <%= link_to 'Edit', {:controller => 'widget', :action => 'edit', :id => c.id} %></b>
            <b> <%= link_to "Delete", {:controller => 'widget', :action => 'delete', :id => c.id},
               :confirm => "Are you sure you want to delete this item?" %></b>
         	</li>
         <% end %>
      </ul>

   <% end %> 
   
   <div class="field" id="dashboard_layout">
		<strong>Dashboard Layout Script: </strong> <%= @dashboard.layoutDash %><br />
	</div>

<p><%= link_to "Add new Widget", {:controller => 'widget', :action => 'new' }%></p>

<%= link_to 'Back', {:action => 'list'} %>

<%= link_to 'Edit Dashboard', {:action => 'edit', :id => @dashboard.id} %>

   <b><%= link_to "View ", "/dashing/dashboards/dashboard?id=" + @dashboard.id.to_s, data: { confirm: "Are you sure?" } %></b>

<hr />

 <p><%= button_to "Dashboard List", {:controller => 'dashboard', :action => 'list'}, {class: 'blueButton', method: 'get'}%></p>

<div id="githublink"><%= link_to "Github README", "https://github.com/alexsheehan1/release_dashboard", :target => "_blank" %></div>