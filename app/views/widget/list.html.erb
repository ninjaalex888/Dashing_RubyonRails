<p>These are the current dashboards</p>

<ul id = "dashboards">
   <% Dashboard.all.each do |c| %>
   <li><%= link_to c.release, {:controller => 'dashboard',:action => "show", :id => c.id} %>
      
   </li>
   <% end %>
</ul>


<% if @widgets.blank? %>

   <p>There are not any widgets currently in the system.</p>
   
<% else %>

   <p>These are the current widgets across ALL dashboards</p>

   <ul id = "widgets">
      <% @widgets.each do |c| %>
      <li>
      <%= link_to c.title, {:action => 'show', :id => c.id} %>
      <b> <%= link_to 'Edit', {:action => 'edit', :id => c.id} %></b>
      <b> <%= link_to "Delete", {:action => 'delete', :id => c.id},
         :confirm => "Are you sure you want to delete this item?" %></b>
   	</li>
      <% end %>
   </ul>

<% end %>

<p><%= link_to "Add new Widget", {:action => 'new' }%></p>

<p><%= link_to "Dashboard List", {:controller => 'dashboard', :action => 'list' }%></p>